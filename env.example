# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Primary database URL (required)
# Format: postgresql://user:password@host:port/database
# For SQLite (development only): sqlite:///portfolio.db
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# Optional: Separate database URLs for production with different access levels
# ADMIN_DATABASE_URL=postgresql://admin_user:password@host:port/portfolio
# READONLY_DATABASE_URL=postgresql://readonly_user:password@host:port/portfolio

# ==========================================
# GOOGLE OAUTH CONFIGURATION
# ==========================================

# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ==========================================
# SECURITY
# ==========================================

# Secret key for Flask sessions and CSRF protection
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=change-this-to-a-random-secret-key

# Email address that should have admin privileges
ADMIN_EMAIL=your-email@example.com

# Optional: Admin token for API access (if needed)
# ADMIN_TOKEN=your-admin-token

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Flask environment: development or production
FLASK_ENV=development

# Port for the application (Railway sets this automatically)
# PORT=5000

# ==========================================
# OPTIONAL: CORS SETTINGS
# ==========================================

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://rfo-portfolio.vercel.app

# ==========================================
# CLOUDINARY (IMAGE STORAGE)
# ==========================================

# Get these from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key

# ==========================================
# REDIS (CACHING & RATE LIMITING) - OPTIONAL
# ==========================================

# Redis connection URL for caching and rate limiting
# If not provided, will fall back to in-memory storage
# Format: redis://[username]:[password]@[host]:[port]/[db]
# Example: redis://default:password@redis-12345.railway.app:6379
# Free providers: Railway (https://railway.app), Upstash (https://upstash.com)
# REDIS_URL=redis://localhost:6379/0
CLOUDINARY_API_SECRET=your-api-secret
